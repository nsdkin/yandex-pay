{
    "name": "@yandex-pay/console",
    "version": "1.0.0",
    "description": "Yandex Pay Console",
    "repository": {
        "type": "arc",
        "url": "https://a.yandex-team.ru/arc_vcs/pay/frontend/services/console"
    },
    "author": "Vladislav Polyakov <polrk@yandex-team.ru>, Simon Moiseenko <stepler@yandex-team.ru>",
    "scripts": {
        "version": "echo $npm_package_version",
        "_____deps_____": "",
        "preinstall": "npx only-allow pnpm",
        "install:deps": "pnpm i --filter {.}...",
        "_____build_____": "",
        "build": "run-p build:client build:server && pnpm run build:express",
        "build:client": "vite build --outDir dist/client --base=//s3.yandex.net/",
        "build:server": "vite build --ssr src/entry.server.tsx --outDir dist/server",
        "build:express": "esbuild src/server/server.ts --bundle --platform=node --external:./node_modules/* --outdir=dist/server",
        "_____start_____": "",
        "start": "node ./dist/server/server.js",
        "start:dev": "node -r ts-node/register ./tools/start.ts",
        "_____lint_____": "",
        "lint": "run-s --continue-on-error lint:css lint:ts",
        "lint:css": "stylelint '**/*.scss'",
        "lint:css:fix": "pnpm run lint:css -- --fix",
        "lint:ts": "eslint '**/*.{ts,tsx}'",
        "lint:ts:fix": "pnpm run lint:ts -- --fix",
        "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,css,scss,json,yaml,yml}'",
        "_____typecheck_____": "",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "@bem-react/classname": "1.5.12",
        "@bem-react/core": "3.0.8",
        "@bem-react/di": "3.1.1",
        "@yandex-int/error-counter": "1.12.2",
        "@yandex-int/express-yandex-csp": "4.0.1",
        "@yandex-int/rum-counter": "4.7.0",
        "@yandex-lego/components": "3.21.2",
        "cookie-parser": "1.4.6",
        "express": "4.17.2",
        "history": "5.2.0",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-redux": "7.2.6",
        "react-router-dom": "6.2.1",
        "redux": "4.1.2"
    },
    "devDependencies": {
        "@types/express": "4.17.13",
        "@types/node": "17.0.12",
        "@types/nodemon": "1.19.1",
        "@types/react": "17.0.38",
        "@types/react-dom": "17.0.11",
        "@types/react-redux": "7.1.22",
        "@typescript-eslint/eslint-plugin": "5.10.1",
        "@typescript-eslint/parser": "5.10.1",
        "@vitejs/plugin-react": "1.1.4",
        "@yandex-int/static-uploader": "0.13.3",
        "@yandex-int/tokenator": "0.15.15",
        "@yandex-int/vault-client": "0.2.8",
        "@yandex-int/yandex-logger": "8.6.2",
        "@yandex-pay/eslint-config": "workspace:1.0.0",
        "chalk": "4",
        "compression": "1.7.4",
        "esbuild": "0.14.14",
        "eslint": "8.7.0",
        "eslint-plugin-import": "2.25.4",
        "eslint-plugin-react": "7.28.0",
        "eslint-plugin-react-hooks": "4.3.0",
        "npm-run-all": "4.1.5",
        "picocolors": "1.0.0",
        "postcss": "8.4.5",
        "postcss-css-variables": "0.18.0",
        "postcss-flexbugs-fixes": "5.0.2",
        "postcss-import": "14.0.2",
        "postcss-inline-svg": "5.0.0",
        "postcss-nested": "5.0.6",
        "postcss-scss": "4.0.3",
        "sass": "1.49.0",
        "serve-static": "1.14.2",
        "stylelint": "14.3.0",
        "ts-node": "10.4.0",
        "typescript": "4.5.5",
        "vite": "2.7.13"
    }
}
