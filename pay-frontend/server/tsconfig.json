{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2017",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "dist",
        "moduleResolution": "node",
        "lib": ["dom", "es2018"],
        "allowJs": true,
        "alwaysStrict": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "noEmit": false
    },
    "include": ["src", "typings"],
    "exclude": ["node_modules", "dist"]
}
